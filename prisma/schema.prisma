generator client {
  provider = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                String   @id @default(uuid())
  tenantId          String   @default("00000000-0000-0000-0000-000000000000")
  username          String   @unique
  firstName         String?
  lastName          String?
  email             String   @unique
  password          String
  passwordChangedAt DateTime @default(now())
  isActive          Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  createdBy         String @default("00000000-0000-0000-0000-000000000000")
  updatedBy         String @default("00000000-0000-0000-0000-000000000000")
  deletedAt         DateTime?

  roles          UserRole[]
  refreshTokens  RefreshToken[]
  actionTokens   UserActionToken[]
}

model Role {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  users UserRole[]
  permissions RolePermission[]

  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String
}

model Permission {
  id    Int        @id @default(autoincrement())
  name  String     @unique
  roles RolePermission[]

  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String
}

model UserRole {
  userId String
  roleId Int

  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  user User @relation(fields: [userId], references: [id])
  role Role @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}

model RolePermission {
  roleId       Int
  permissionId Int

  createdAt DateTime @default(now())
  createdBy String
  updatedAt DateTime @updatedAt
  updatedBy String

  role       Role       @relation(fields: [roleId], references: [id])
  permission Permission @relation(fields: [permissionId], references: [id])

  @@id([roleId, permissionId])
}

enum UserActionTokenType {
  EMAIL_VERIFICATION
  PASSWORD_RESET
  CHANGE_EMAIL
  MAGIC_LOGIN
  MFA_ENROLLMENT
}

enum RefreshTokenStatus {
  ACTIVE
  ROTATED
  REVOKED
  REUSED
  EXPIRED
}

model RefreshToken {
  id                String   @id @default(uuid())
  tenantId          String
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  sessionId         String
  deviceId          String?
  tokenHash         String   @unique
  tokenFamilyId     String
  parentTokenId     String?
  replacedByTokenId String?
  status            RefreshTokenStatus @default(ACTIVE)
  createdAt         DateTime @default(now())
  expiresAt         DateTime
  rotatedAt         DateTime?
  revokedAt         DateTime?
  reuseDetectedAt   DateTime?
  createdByIp       String?
  createdByUserAgent String?
  lastUsedAt        DateTime?
  lastUsedIp        String?
  lastUsedUserAgent String?
  metadata          Json?

  @@index([tenantId, userId, status])
  @@index([tenantId, sessionId])
}

model UserActionToken {
  id                String   @id @default(uuid())
  tenantId          String
  userId            String
  user              User     @relation(fields: [userId], references: [id])
  type              UserActionTokenType
  tokenHash         String   @unique
  expiresAt         DateTime
  usedAt            DateTime?
  revokedAt         DateTime?
  createdAt         DateTime @default(now())
  createdByIp       String?
  createdByUserAgent String?
  consumedByIp      String?
  consumedByUserAgent String?
  replacesTokenId   String?
  metadata          Json?

  @@index([tenantId, userId, type])
  @@index([tenantId, expiresAt])
}
